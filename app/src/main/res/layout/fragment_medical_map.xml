<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.fragment.MedicalMapFragment">

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:text="Peta Medis"
        android:textColor="@color/colorFont"
        android:textSize="36sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <ImageView
        android:id="@+id/imageView"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:layout_marginStart="8dp"
        android:background="@drawable/bg_hospital"
        android:padding="10dp"
        android:src="@drawable/ic_baseline_local_hospital_24"
        app:layout_constraintBottom_toBottomOf="@+id/tvHospital"
        app:layout_constraintStart_toStartOf="@+id/tvHospital"
        app:layout_constraintTop_toTopOf="@+id/tvHospital" />

    <TextView
        android:id="@+id/tvHospital"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:paddingLeft="75dp"
        android:paddingTop="24dp"
        android:paddingBottom="24dp"
        android:text="Rumah Sakit Terdekat"
        android:textAppearance="?android:textAppearanceMedium"
        android:textColor="@color/colorFont"
        android:background="?android:selectableItemBackground"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView5" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:background="@color/grey"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/imageView"
        app:layout_constraintTop_toBottomOf="@+id/tvHospital" />


    <TextView
        android:id="@+id/tvPuskesmas"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?android:selectableItemBackground"
        android:paddingLeft="75dp"
        android:paddingTop="24dp"
        android:paddingBottom="24dp"
        android:text="Puskesmas Terdekat"
        android:textAppearance="?android:textAppearanceMedium"
        android:textColor="@color/colorFont"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView9" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:background="@drawable/bg_puskesmas"
        android:padding="10dp"
        android:src="@drawable/ic_baseline_medical_services_24"
        app:layout_constraintBottom_toBottomOf="@+id/tvPuskesmas"
        app:layout_constraintStart_toStartOf="@+id/imageView"
        app:layout_constraintTop_toTopOf="@+id/tvPuskesmas" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:background="@color/grey"
        app:layout_constraintEnd_toEndOf="@+id/textView9"
        app:layout_constraintStart_toStartOf="@+id/textView9"
        app:layout_constraintTop_toBottomOf="@+id/tvPuskesmas" />


    <TextView
        android:id="@+id/tvApotek"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?android:selectableItemBackground"
        android:paddingLeft="75dp"
        android:paddingTop="24dp"
        android:paddingBottom="24dp"
        android:text="Apotek Terdekat"
        android:textAppearance="?android:textAppearanceMedium"
        android:textColor="@color/colorFont"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView7" />

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:background="@drawable/bg_apotek"
        android:padding="14dp"
        android:src="@drawable/i_drugs"
        app:layout_constraintBottom_toBottomOf="@+id/tvApotek"
        app:layout_constraintStart_toStartOf="@+id/imageView3"
        app:layout_constraintTop_toTopOf="@+id/tvApotek" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:background="@color/grey"
        app:layout_constraintEnd_toEndOf="@+id/textView7"
        app:layout_constraintStart_toStartOf="@+id/textView7"
        app:layout_constraintTop_toBottomOf="@+id/tvApotek" />
</androidx.constraintlayout.widget.ConstraintLayout>